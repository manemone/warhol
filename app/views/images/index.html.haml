.row.new_image
  .col-md-12
    %h4
      Upload new image
    = form_for @new_image do |f|
      = image_tag @new_image.image.url if @new_image.image?
      = f.label :image
      = f.file_field :image
      = f.hidden_field :image_cache
      = f.submit

.row.gallery
  .col-md-12
    %h4
      Uploaded images

    = paginate @images, window: 3, outer_window: 1

    .card-columns
      - @images.each do |image|
        .card.card-inverse.image
          = link_to image_path(image) do
            = image_tag image.image.url, class: "card-img img-fluid"
            .card-img-overlay.image-info
              %p.card-text
                = "#{image.width}x#{image.height}"

    = paginate @images, window: 3, outer_window: 1

.card-group
  .card.image
    = lazy_image_resource @image, :image, nil, class: "card-img"

  .card.info
    .card-block
      .card-text
        %dl
          %dt URL
          %dd= @image.image.url
          %dt Size
          %dd= "#{@image.width}x#{@image.height}"
          %dt Uploaded at
          %dd= @image.created_at
      .text-md-right
        = link_to image_path(@image), method: :delete, class: "btn btn-danger" do
          Delete
